{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": {
		"include": ["src/**/*.ts"],
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"useEditorconfig": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80,
		"attributePosition": "auto",
		"bracketSpacing": true,
		"ignore": [
			"./.vscode",
			"./compodoc",
			"./coverage",
			"./docs",
			"./node_modules",
			"./out",
			"./tests",
			"**/commitlint.config.js"
		]
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"style": {
				"useBlockStatements": "warn",
				"useNamingConvention": {
					"level": "warn",
					"options": { "strictCase": false }
				},
				"useThrowOnlyError": "warn"
			},
			"suspicious": { "noDoubleEquals": "warn" }
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "preserve",
			"trailingCommas": "all",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"quoteStyle": "single",
			"attributePosition": "auto",
			"bracketSpacing": true
		},
		"globals": ["exports"]
	},
	"overrides": [
		{
			"ignore": [
				"**/out",
				"**/*.d.ts",
				"**/.vscode/",
				"**/compodoc/",
				"**/coverage/",
				"**/docs/",
				"**/node_modules/",
				"**/out/",
				"**/tests/",
				"**/commitlint.config.js",
				"**/eslint.config.mjs"
			],
			"include": ["**/*.ts"]
		},
		{
			"ignore": [
				"**/out",
				"**/*.d.ts",
				"**/.vscode/",
				"**/compodoc/",
				"**/coverage/",
				"**/docs/",
				"**/node_modules/",
				"**/out/",
				"**/tests/",
				"**/commitlint.config.js",
				"**/eslint.config.mjs"
			],
			"include": ["**/*.ts"]
		}
	]
}
